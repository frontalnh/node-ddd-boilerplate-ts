{
  "name": "node-starterkit-ts",
  "version": "1.0.0",
  "description": "nodejs starterkit with typescript environment implemented by namhoon",
  "repository": {
    "type": "git",
    "url": "https://github.com/frontalnh/node-starterkit-ts"
  },
  "scripts": {
    "test": "jest -i",
    "test:dev": "jest -i --no-cache --watch",
    "test:unit": "jest -i --no-cache --watch -t ",
    "start": "pm2 start ./dist/bundle.js",
    "test:prod": "jest",
    "start:prod": "export NODE_ENV=production &&nodemon ./dist/bundle.js --watch \".dist\"",
    "build": "webpack --config ./webpack.config.js --mode production",
    "build:dev": "webpack --config ./webpack.config.js --watch --mode development",
    "start:dev": "pm2 start ./dist/bundle.js --watch && pm2 logs bundle",
    "restart:dev": "pm2 restart ./dist/bundle.js --watch && pm2 logs bundle"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    },
    "globals": {
      "ts-jest": {
        "tsConfigFile": "tsconfig.json"
      }
    },
    "testMatch": [
      "**/*.test.+(ts|tsx|js)"
    ]
  },
  "author": "",
  "license": "ISC",
